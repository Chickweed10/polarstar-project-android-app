<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    tools:context=".Myinfo_DuserActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_aac"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/othProflN"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                app:civ_border_overlay="true"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFF"
                android:src="@drawable/profileimage"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanumsquare_aac"
                android:text="회원 정보"
                android:textColor="#454545"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nanumsquare_aac"
                android:text="기본 정보"
                android:textColor="#454545"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="이름"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/othProflNameN"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="이름"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    style="@style/Hyperlink"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="전화번호"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp"  />

                <TextView
                    android:id="@+id/othProflPhoneNumN"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="전화번호"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    style="@style/Hyperlink"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"
                android:text="추가 정보"
                android:textColor="#454545"
                android:fontFamily="@font/nanumsquare_aac"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="도로명 주소"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp"  />

                <TextView
                    android:id="@+id/othProflAddressN"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="도로명 주소"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    style="@style/Hyperlink"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="상세 주소"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/othProflDetailAddN"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="상세 주소"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    style="@style/Hyperlink"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="생년월일"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/othProflBirthN"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:hint="생년월일"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    style="@style/Hyperlink"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" /> />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mProflGender"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="성별 "
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/othProflBtGenderN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/othProflBtGenderMN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="남" />

                    <RadioButton
                        android:id="@+id/othProflBtGenderFN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="여" />

                </RadioGroup>
            </LinearLayout>


            <Button
                android:id="@+id/othProflBtEditN"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ok_button"
                android:textColor="@drawable/ok_button_text_color"
                android:text="확인"
                android:fontFamily="@font/nanumsquare_aac"
                android:textSize="14sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

