<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    tools:context=".ClientageRegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_aac"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_Rprofl"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/profileimage"
                app:civ_border_color="#FFFFFF"
                app:civ_border_overlay="true"
                app:civ_border_width="3dp" />

            <Button
                android:id="@+id/joinBtProfl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="#00ff0000"
                android:fontFamily="@font/nanumsquare_aab"
                android:text="프로필 사진 변경"
                android:textColor="#006BBF"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/joinEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/nanumsquare_aab"
                        android:hint="이메일 입력"
                        android:inputType="textEmailAddress"
                        android:padding="11dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/joinBtEmailCk"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ok_button"
                        android:textColor="@drawable/ok_button_text_color"
                        android:fontFamily="@font/nanumsquare_aac"
                        android:text="중복 확인"
                        android:textAllCaps="false"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/joinPW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:hint="비밀번호 입력"
                    android:inputType="textPassword"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/joinPWCk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/joinName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:hint="이름"
                    android:inputType="textPersonName"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/joinPhoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/nanumsquare_aab"
                        android:hint="전화번호 입력"
                        android:inputType="phone"
                        android:padding="11dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/joinPNReq"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ok_button"
                        android:textColor="@drawable/ok_button_text_color"
                        android:fontFamily="@font/nanumsquare_aac"
                        android:text="인증요청"
                        android:textAllCaps="false"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/joinPNCk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/nanumsquare_aab"
                        android:hint="인증번호 입력"
                        android:inputType="number"
                        android:padding="11dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/joinPNReqCk"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ok_button"
                        android:textColor="@drawable/ok_button_text_color"
                        android:fontFamily="@font/nanumsquare_aac"
                        android:text="인증확인"
                        android:textAllCaps="false"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/joinRoadAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ems="10"
                        android:focusable="false"
                        android:fontFamily="@font/nanumsquare_aab"
                        android:hint="도로명 주소"
                        android:inputType="textPersonName"
                        android:padding="11dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/joinFdAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ok_button"
                        android:fontFamily="@font/nanumsquare_aac"
                        android:text="검색"
                        android:textAllCaps="false"
                        android:textColor="@drawable/ok_button_text_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/joinDetailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:hint="상세 주소"
                    android:inputType="textPersonName"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="생년월일"
                        android:textColor="#454545"
                        android:fontFamily="@font/nanumsquare_aab"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/joinBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumsquare_aab"
                        android:background="@drawable/line_color"
                        android:textSize="16sp"
                        android:text="btn_year_month_picker" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="성별"
                        android:layout_gravity="center"
                        android:textColor="#454545"
                        android:fontFamily="@font/nanumsquare_aab"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/joinBtGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/joinBtGenderM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/nanumsquare_aab"
                            android:text="남" />

                        <RadioButton
                            android:id="@+id/joinBtGenderF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/nanumsquare_aab"
                            android:text="여" />

                    </RadioGroup>

                </LinearLayout>

                <Button
                    android:id="@+id/joinBt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/ok_button"
                    android:textColor="@drawable/ok_button_text_color"
                    android:fontFamily="@font/nanumsquare_aac"
                    android:text="회원가입"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>