<?xml version="1.0" encoding="utf-8"?>
<!-- Relative layout as parent layout-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".LoginActivity">


    <!-- Linear layout to contain all the
        editText, password , logo and button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="28dp"
        android:paddingEnd="28dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nanumsquare_aab"
            android:gravity="center"
            android:padding="1dp"
            android:text="실종 예방 위치 추적 서비스"
            android:textColor="#757477"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="147dp"
            android:layout_height="75dp"
            android:fontFamily="@font/nanumsquare_aab"
            android:gravity="center"
            android:text="북극성"
            android:textColor="#19134D"
            android:textSize="50sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lgnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_background_edit_text"
            android:ems="10"
            android:fontFamily="@font/nanumsquare_aab"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/lgnPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_background_edit_text"
            android:ems="10"
            android:fontFamily="@font/nanumsquare_aab"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:padding="14dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <Button
            android:id="@+id/lgnBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:backgroundTint="#19134D"
            android:fontFamily="@font/nanumsquare_aab"
            android:padding="12dp"
            android:text="로그인"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="4dp" />

        <!--
        <CheckBox
            android:id="@+id/lgnCbAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:text="자동로그인"
            android:textSize="15sp" />

        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="#e2e2e2" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/findEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:fontFamily="@font/nanumsquare_aab"
                android:gravity="center"
                android:text="이메일 찾기"
                android:textAlignment="center"
                android:textColor="#515151"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/slash"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#e2e2e2" />

            <Button
                android:id="@+id/rsPW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:fontFamily="@font/nanumsquare_aab"
                android:gravity="center"
                android:text="비밀번호 재설정"
                android:textAlignment="center"
                android:textColor="#515151"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/slash2"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#e2e2e2"
                android:textSize="16dp" />

            <Button
                android:id="@+id/ckSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:fontFamily="@font/nanumsquare_aab"
                android:gravity="center"
                android:text="회원가입"
                android:textAlignment="center"
                android:textColor="#515151"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>