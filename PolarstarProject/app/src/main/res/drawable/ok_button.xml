<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="#19134D" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#19134D"
                android:endColor="#19134D"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#19134D" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <gradient
                android:startColor="#19134D"
                android:endColor="#19134D"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#19134D" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- default -->

</selector>